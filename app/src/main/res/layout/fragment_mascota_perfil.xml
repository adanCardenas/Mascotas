<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mascota_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cardenas.adan.mascotas.fragment.MascotaPerfilFragmentRecyclerView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/fragment_mascota_perfil_circle_imageview"
                android:layout_width="@dimen/circle_imageview_img_size"
                android:layout_height="@dimen/circle_imageview_img_size"
                android:layout_marginTop="@dimen/margen_estandar"
                android:src="@drawable/tom"
                android:foregroundGravity="center"
                app:civ_border_color="@color/circle_imageview"
                app:civ_border_width="@dimen/circle_imageview_border_width"
                app:civ_shadow="true"
                app:civ_shadow_radius="@string/circle_imageview_shadow_radius"
                app:civ_shadow_color="@color/circle_imageview_shadow_color" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_mascota_perfil_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</FrameLayout>